<p id="notice"><%= notice %></p>

<h1>Disciples</h1>

<table>
  <thead>
    <tr>
      <th>Disciple Id</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Discipler Id</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciples.each do |disciple| %>
      <tr>
        <td><%= disciple.id %></td>
        <td><%= disciple.first_name %></td>
        <td><%= disciple.last_name %></td>
        <td><%= disciple.discipler_id %></td>
        <td><%= disciple.created_at.localtime.strftime("%m/%d/%Y %H:%M:%S") %></td>
        <td><%= disciple.updated_at.localtime.strftime("%m/%d/%Y %H:%M:%S") %></td>
        <td><%= link_to 'Show', disciple %></td>
        <td><%= link_to 'Edit', edit_disciple_path(disciple) %></td>
        <td><%= link_to 'Destroy', disciple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

