<p id="notice"><%= notice %></p>

<h1>Evaluations</h1>

<table>
  <thead>
    <tr>
      <th>Evaluation Id</th>
      <th>Discipler Id</th>
      <th>Disciple Id</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.id %></td>
        <td><%= evaluation.discipler_id %></td>
        <td><%= evaluation.disciple_id %></td>
        <td><%= evaluation.created_at.localtime.strftime("%m/%d/%Y %H:%M:%S") %></td>
        <td><%= evaluation.updated_at.localtime.strftime("%m/%d/%Y %H:%M:%S") %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

